<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jacklinsir.hm.dao.SysPermissionDao">
    <update id="updatePermission">
        update sys_permission t
        <set>
            <if test="parentId != null">
                parentId = #{parentId},
            </if>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="css != null">
                css = #{css},
            </if>
            <if test="href != null">
                href = #{href},
            </if>
            <if test="type != null">
                `type` = #{type},
            </if>
            <if test="permission != null">
                permission = #{permission},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
        </set>
        where t.id = #{id}
    </update>

</mapper>